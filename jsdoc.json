{
  "source": {
    "include": ["cd48.js", "README.md"],
    "includePattern": ".js$"
  },
  "opts": {
    "destination": "./docs/api",
    "recurse": true,
    "readme": "README.md",
    "template": "node_modules/better-docs"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "default": {
      "outputSourceFiles": true,
      "includeDate": false
    },
    "better-docs": {
      "name": "CD48 API Documentation",
      "title": "CD48 API Documentation",
      "navigation": [
        {
          "label": "GitHub",
          "href": "https://github.com/OpenPhysics/jscd48"
        }
      ]
    }
  },
  "metadata": {
    "title": "CD48 API Documentation",
    "description": "JavaScript interface for the CD48 Coincidence Counter"
  }
}
